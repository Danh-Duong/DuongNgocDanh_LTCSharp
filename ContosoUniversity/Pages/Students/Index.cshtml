@model ContosoUniversity.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form method="get" asp-page="./Index">
    <label>Tìm kiếm</label>
    <input name="SearchString" value="">
    <button type="Submit" class="btn btn-info">Tìm</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].LastName109)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].FirstMidName109)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student[0].EnrollmentDate109)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName109)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName109)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate109)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID109">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID109">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID109">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
